! -*- mode: conf-xdefaults -*-
! .Xdefaults for Ubuntu

Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.autohint: 0
Xft.lcdfilter: lcddefault

URxvt*geometry: 100x30

URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*scrollBar_floating: false

URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

! Urxvt Perl Extensions
URxvt.perl-lib: /usr/lib/urxvt/perl/
URxvt.perl-ext-common: selection-to-clipboard,pasta
URxvt.keysym.C-c: perl:clipboard:copy
URxvt.keysym.C-v: perl:pasta:paste
! Emacs copy and paste
URxvt.keysym.M-w: perl:clipboard:copy
URxvt.keysym.C-y: perl:pasta:paste

URxvt*internalBorder: 4
URxvt*letterSpace: -1

URxvt*font: xft: DejaVu Sans Mono:size=9:antialias=true:hinting=true
URxvt*boldFont: xft: DejaVu Sans Mono:bold:size=9:antialias=true:hinting=true
URxvt*italicFont: xft: DejaVu Sans Mono:italic:size=9:antialias=true:hinting=true
URxvt*boldItalicFont: xft: DejaVu Sans Mono:bold:italic:size=9:antialias=true:hinting=true

! -- Urxvt color scheme -- !
#include "/home/jmccabe/.colors/gruvbox-dark-soft"
