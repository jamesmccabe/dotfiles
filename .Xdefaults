!! .Xdefaults --- Ubuntu 

Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

!! URxvt Appearance

URxvt.font: xft: DejaVu Sans Mono:size=12
URxvt.boldFont: xft: DejaVu Sans Mono:bold:size=12
URxvt.italicFont: xft: DejaVu Sans Mono:italic:size=12
URxvt.boldItalicFont: xft: DejaVu Sans Mono:bold:italic:size=12

URxvt*internalBorder: 3
URxvt.letterSpace: -1
URxvt.geometry: 90x30
URxvt.scrollBar: false

URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true

!! Urxvt Perl Extensions
URxvt.perl-ext-common: selection-to-clipboard,resize-font,pasta

!! Copy and paste with Ctrl + c / Ctrl + v
URxvt.keysym.C-c: perl:clipboard:copy
URxvt.keysym.C-v: perl:pasta:paste
!! Emacs copy and paste
URxvt.keysym.M-w: perl:clipboard:copy
URxvt.keysym.C-y: perl:pasta:paste

!! Zoom
!! https://github.com/simmel/urxvt-resize-font
URxvt.keysym.C-minus:      resize-font:smaller
URxvt.keysym.C-equal:      resize-font:bigger
URxvt.keysym.C-0:          resize-font:reset
URxvt.keysym.C-question:   resize-font:show

